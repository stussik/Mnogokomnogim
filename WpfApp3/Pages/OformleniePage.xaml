<Page x:Class="WpfApp3.Pages.OformleniePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OformleniePage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Тип доставки"/>
            <ComboBox x:Name="CBTypeofDelivery"
                      DisplayMemberPath="Name" 
                      SelectedItem="{Binding TypeofDelivery}"/>
            <TextBlock Text="Тип оплаты"/>
        <ComboBox x:Name="CBTypeofPayment"
                      DisplayMemberPath="Name" 
                      SelectedItem="{Binding TypeofPayment}"/>
            <Button Name="BFormOrder"
                    Content="Оформить заказ"
                    Click="BFormOrder_Click" />
            <Button x:Name="BExit"
                    Content="Назад"
                    Click="BExit_Click"/>
        </StackPanel>
    </Grid>
</Page>
